<!DOCTYPE html>
<html>
  <head>
    <title>InfoShare Admin Panel</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="alert alert-<%= flash[:type] %>">
      <%= flash[:notice] %>
    </div>
    <%= yield %>
  </body>
</html>
